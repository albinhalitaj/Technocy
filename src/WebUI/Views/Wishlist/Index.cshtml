@model IEnumerable<Domain.Entities.Wishlist>
@{
    ViewBag.Title = "Wishlist";
    Layout = "_Layout";
}

@if (!Model.Any())
{
    <div class="text-center d-flex justify-content-center align-items-center mtb-100">
        <h4 class="alert alert-info" style="width: 500px">Lista e dëshirave është e zbrazët.</h4>
    </div>
}
else
{
<div class="cart-main-area pt-85 pb-90">
<div class="container">
    <h3 class="cart-page-title">Lista e dëshirave</h3>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-12">
            <form action="#">
                <div class="table-content table-responsive cart-table-content">
                    <table>
                        <thead>
                            <tr>
                                <th>Foto</th>
                                <th>Emri i produktit</th>
                                <th>Cmimi</th>
                                <th>Stoku</th>
                                <th>Shto në shportë</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="product-thumbnail">
                                        <a asp-controller="Produktet" asp-action="Product" asp-route-slug="@item.Product.Slug"><img src="@item.Product.ProductGalleries.FirstOrDefault()?.URL" style="width: 80px;height: 80px;object-fit: contain" alt="product"></a>
                                    </td>
                                    <td class="product-name"><a asp-controller="Produktet" asp-action="Product" asp-route-slug="@item.Product.Slug">@(item.Product.Name[..30])...</a></td>
                                    <td class="product-price-cart"><span class="amount">@item.Product.Price.ToString("#,##0.00")€</span></td>
                                    @if (item.Stock)
                                    {
                                        <td class="product-subtotal">Në stok</td>
                                        <td class="product-wishlist-cart">
                                            <a href="#">Shto në shportë</a>
                                        </td>
                                    }
                                    else
                                    {
                                        <td class="product-subtotal">Nuk ka në stok</td>
                                        <td></td>
                                    }
                                    <td><a href="#">X</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </form>
        </div>
    </div>
</div>
</div>    
}