@using Domain.Enums
@model ProfileViewModel
@{
    ViewBag.Title = "Profile";
    Layout = "_Layout";
}

<div class="my-account-wrapper pt-100 pb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- My Account Page Start -->
                <div class="myaccount-page-wrapper">
                    <!-- My Account Tab Menu Start -->
                    <div class="row">
                        <div class="col-lg-3 col-md-4">
                            <div class="myaccount-tab-menu nav" role="tablist">
                                <a href="#dashboad" class="active" data-bs-toggle="tab"><i class="fa fa-dashboard"></i>
                                    Profili</a>
                                <a href="#orders" data-bs-toggle="tab"><i class="fa fa-cart-arrow-down"></i> Porositë</a>
                                <a href="#payment-method" data-bs-toggle="tab"><i class="fa fa-credit-card"></i> Mënyrat e pagesës</a>
                                <a href="#address-edit" data-bs-toggle="tab"><i class="fa fa-map-marker"></i> Adresa</a>
                                <a href="#account-info" data-bs-toggle="tab"><i class="fa fa-user"></i> Detajet e llogarisë</a>
                                <a href="#change-pass" data-bs-toggle="tab"><i class="fa fa-user"></i> Ndrysho fjalekalimin</a>
                                <a asp-controller="Account" asp-action="LogOff"><i class="fa fa-sign-out"></i> Dil</a>
                            </div>
                        </div>
                        <!-- My Account Tab Menu End -->
                        <!-- My Account Tab Content Start -->
                        <div class="col-lg-9 col-md-8">
                            <div class="tab-content" id="myaccountContent">
                                <!-- Single Tab Content Start -->
                                <div class="tab-pane fade show active" id="dashboad" role="tabpanel">
                                    <div class="myaccount-content">
                                        <h3>Dashboard</h3>
                                        <div class="welcome">
                                            <p>Përshëndetje, <strong>@User.Identity?.Name</strong> (Nëse nuk jeni <strong>@User.Identity?.Name !</strong><a asp-controller="Account" asp-action="LogOff" class="logout"> Dil</a>)</p>
                                        </div>

                                        <p class="mb-0">Nga profili i llogarisë tuaj ju mund të kontrolloni dhe shikoni me lehtësi porositë tuaja të fundit, të menaxhoni adresat tuaja të transportit dhe faturimit dhe të modifikoni fjalëkalimin dhe detajet e llogarisë tuaj.</p>
                                    </div>
                                </div>
                                <!-- Single Tab Content End -->
                                <!-- Single Tab Content Start -->
                                <div class="tab-pane fade" id="orders" role="tabpanel">
                                    <div class="myaccount-content">
                                        <h3>Porositë</h3>
                                        <div class="myaccount-table table-responsive text-center">
                                            @if (!Model.Orders.Any())
                                            {
                                                <h4>Ju nuk keni ende porosi të kryera.</h4>
                                            }
                                            else
                                            {
                                                <table class="table table-bordered">
                                                    <thead class="thead-light">
                                                    <tr>
                                                        <th>Porosia</th>
                                                        <th>Data</th>
                                                        <th>Statusi</th>
                                                        <th>Totali</th>
                                                        <th>Action</th>
                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                    @foreach (var order in Model.Orders)
                                                    {
                                                        <tr>
                                                            <td>#@order.OrderNumber</td>
                                                            <td>@order.OrderDate.ToString("f")</td>
                                                            @switch (order.Status)
                                                            {
                                                                case OrderStatus.ManualVerificationNeeded:
                                                                    <td>Verifikimi manual i nevojshëm</td>
                                                                    break;
                                                                case OrderStatus.Confirmed:
                                                                    <td>Konfirmuar</td>
                                                                    break;
                                                                case OrderStatus.Completed:
                                                                    <td>Kompletuar</td>
                                                                    break;
                                                                case OrderStatus.Shipped:
                                                                    <td>E Nisur</td>
                                                                    break;
                                                                case OrderStatus.Cancelled:
                                                                    <td>Anuluar</td>
                                                                    break;
                                                                default:
                                                                    throw new ArgumentOutOfRangeException();
                                                            }
                                                            <td>@order.Total.ToString("#,##0.00") €</td>
                                                            <td><a href="cart.html" class="check-btn sqr-btn ">Shiko</a></td>
                                                        </tr>
                                                    }
                                                    </tbody>
                                                </table>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <!-- Single Tab Content End -->
                                <!-- Single Tab Content Start -->
                                <div class="tab-pane fade" id="payment-method" role="tabpanel">
                                    <div class="myaccount-content">
                                        <h3>Mënyrat e pagesës</h3>
                                        <p class="saved-message">Nuk mund ta ruani ende mënyrën tuaj të pagesës.</p>
                                    </div>
                                </div>
                                <!-- Single Tab Content End -->
                                <!-- Single Tab Content Start -->
                                <div class="tab-pane fade" id="address-edit" role="tabpanel">
                                    <div class="myaccount-content">
                                        <h3>Adresa</h3>
                                        <address>
                                            <p><strong>@User.Identity?.Name</strong></p>
                                            <p>1355 Market St, Suite 900 <br>
                                            San Francisco, CA 94103</p>
                                            <p>Mobile: (123) 456-7890</p>
                                        </address>
                                        <a href="#" class="check-btn sqr-btn "><i class="fa fa-edit"></i> Ndrysho adresën</a>
                                    </div>
                                </div>
                                <!-- Single Tab Content End -->
                                <!-- Single Tab Content Start -->
                                <div class="tab-pane fade" id="account-info" role="tabpanel">
                                    <div class="myaccount-content">
                                        <h3>Detajet e llogarisë</h3>
                                        <div class="account-details-form">
                                            <form action="#">
                                                <div class="row">
                                                    <div class="col-lg-6">
                                                        <div class="single-input-item">
                                                            <label for="first-name" class="required">Emri</label>
                                                            <input asp-for="Customer.Name" id="first-name" />
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <div class="single-input-item">
                                                            <label for="last-name" class="required">Mbiemri</label>
                                                            <input asp-for="Customer.Surname" id="last-name" />
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="single-input-item">
                                                    <label for="email" class="required">Emaili</label>
                                                    <input asp-for="Customer.Email" id="email" />
                                                </div>
                                                <div class="row">
                                                    <div class="col-lg-6">
                                                        <div class="single-input-item">
                                                            <label for="address" class="required">Adresa</label>
                                                            <input asp-for="Customer.Address" id="address" />
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <div class="single-input-item">
                                                            <label for="postal-code" class="required">Kodi Postal</label>
                                                            <input asp-for="Customer.PostalCode" id="postal-code" />
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="single-input-item">
                                                    <label for="phone" class="required">Telefoni</label>
                                                    <input asp-for="Customer.PostalCode" id="phone" />
                                                </div>
                                                <div class="single-input-item">
                                                    <button class="check-btn sqr-btn ">Ruaj ndryshimet</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div> <!-- Single Tab Content End -->
                                <div class="tab-pane fade" id="change-pass" role="tabpanel">
                                    <div class="myaccount-content">
                                        <h3>Ndrysho fjalekalimin</h3>
                                        <div class="account-details-form">
                                            <form action="#">
                                                <div class="single-input-item">
                                                    <label for="current-pwd" class="required">Fjalëkalimi aktual</label>
                                                    <input type="password" id="current-pwd" />
                                                </div>
                                                <div class="row">
                                                    <div class="col-lg-6">
                                                        <div class="single-input-item">
                                                            <label for="new-pwd" class="required">Fjalëkalimi i ri</label>
                                                            <input type="password" id="new-pwd" />
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <div class="single-input-item">
                                                            <label for="confirm-pwd" class="required">Konfirmo fjalëkalimin e ri</label>
                                                            <input type="password" id="confirm-pwd" />
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="single-input-item">
                                                    <button class="check-btn sqr-btn ">Ruaj ndryshimet</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div> <!-- My Account Tab Content End -->
                    </div>
                </div> <!-- My Account Page End -->
            </div>
        </div>
    </div>
</div>