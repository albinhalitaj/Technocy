<script type="text/javascript">
    function addToWishList(productId,stock,price) {
      $.ajax({
        type: "POST",
        url: "/Wishlist/Add/",
        data: {"ProductId":productId,"Stock":stock > 0,"Price":price},
        success: async function(resp) {
          if (resp.success){
            const Toast = Swal.mixin({
                toast: true,
                position: 'top-right',
                iconColor: 'red',
                customClass: {
                  popup: 'colored-toast'
                },
                showConfirmButton: false,
                timer: 2500,
                timerProgressBar: true
              })
              await Toast.fire({
                icon: 'success',
                title: '@_localizer["wishlistSuccess"]'
              })
          }else if (!resp.success && resp.error === "User is not authenticated") {
              location.href = "/account/login/";
          }
          else {
              const Toast = Swal.mixin({
                  toast: true,
                  position: 'top-right',
                  iconColor: 'red',
                  customClass: {
                    popup: 'colored-toast'
                  },
                  showConfirmButton: false,
                  timer: 2500,
                  timerProgressBar: true
                })
                await Toast.fire({
                  icon: 'error',
                  title: '@_localizer["wishlistError"]'
                })
          }
        },
        error: function(err) {
          location.href="/account/login";
        }
      })
    }

</script>
