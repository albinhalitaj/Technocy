@{
    ViewBag.Title = "Llogaria";
    Layout = "_Layout";
}

<div class="login-register-area pt-85 pb-90">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-12 ms-auto me-auto">
                <div class="login-register-wrapper">
                    <div class="login-register-tab-list nav">
                        <a class="active" data-bs-toggle="tab" href="#lg1">
                            <h4> Kyçu </h4>
                        </a>
                        <a data-bs-toggle="tab" href="#lg2">
                            <h4> Regjistrohu </h4>
                        </a>
                    </div>
                    <div class="tab-content">
                        <div id="lg1" class="tab-pane active">
                            <div class="login-form-container">
                                <div class="login-register-form">
                                    <form action="#" method="post">
                                        <input type="text" name="user-name" placeholder="Emaili">
                                        <input type="password" name="user-password" placeholder="Fjalëkalimi">
                                        <div class="button-box">
                                            <div class="login-toggle-btn">
                                                <input type="checkbox">
                                                <label>Më mbaj mend.</label>
                                                <a href="#">Keni harruar fjalëkalimin?</a>
                                            </div>
                                            <button type="submit" style="width: 100%;height: 50px">Kyçu</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div id="lg2" class="tab-pane">
                            <div class="login-form-container">
                                <div class="login-register-form">
                                    <form action="#" method="post">
                                        <input type="text" name="user-name" placeholder="E-maili">
                                        <input type="password" name="user-password" placeholder="Fjalëkalimi">
                                        <input type="password" name="user-password-confirm" placeholder="Konfirmo fjalëkalimin">
                                        <input type="text" name="name" placeholder="Emri">
                                        <input type="text" name="surname" placeholder="Mbiemri">
                                        <select class="form-input">
                                            <option>Gjinia</option>
                                            <option>Mashkull</option>
                                            <option>Femër</option>
                                        </select>
                                        <div style="display: flex">
                                            <select style="flex: 1;margin-right: 10px" class="form-input">
                                                <option>Kosovë</option>
                                                <option>Shqipëri</option>
                                                <option>Maqedoni</option>
                                                <option>Diasporë</option>
                                            </select>
                                            <select style="flex: 1" class="form-input">
                                                <option>Prishtinë</option>
                                                <option>Prizren</option>
                                                <option>Suharekë</option>
                                                <option>Ferizaj</option>
                                            </select>    
                                        </div>
                                        <div style="display: flex;flex: 3">
                                            <select style="flex: 1;margin-right: 10px" class="form-input">
                                                <option>Dita e lindjes</option>
                                                @for (var i = 1; i <= 31; i++)
                                                {
                                                    <option>@i</option>
                                                }
                                            </select> 
                                            <select style="flex: 1;margin-right: 10px" class="form-input">
                                                <option>Muaji i lindjes</option>
                                                @for (var i = 1; i <= 12; i++)
                                                {
                                                    <option>@i</option>
                                                }
                                            </select>
                                            <select style="flex: 1" class="form-input">
                                                <option>Viti i lindjes</option>
                                                @for (var i = DateTime.Now.Year; i >= 1994; i--)
                                                {
                                                    <option>@i</option>
                                                }
                                            </select>
                                        </div>
                                        <div class="terms-conditions">
                                            <label><input style="margin-right: 5px" type="checkbox">Unë i pranoj Kushtet e përdorimit</label>
                                        </div>
                                        <div class="button-box">
                                            <button type="submit" style="width: 100%;height: 50px">Regjistrohu</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>