@model IEnumerable<Domain.Entities.Product>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}


<div class="shop-area pt-90 pb-90">
    <div class="container">
        <div class="row flex-row-reverse">
            <div class="col-lg-9">
                <div class="shop-topbar-wrapper">
                    <div class="shop-topbar-left">
                        <div class="view-mode nav">
                            <a class="active" href="#shop-1" data-bs-toggle="tab"><i class="la la-th"></i></a>
                            <a href="#shop-2" data-bs-toggle="tab"><i class="la la-list-ul"></i></a>
                        </div>
                        <p>Duke treguar @ViewBag.Produktet nga @ViewBag.TotalProdukte produkte </p>
                    </div>
                    <div class="product-sorting-wrapper">
                        <div class="product-show shorting-style">
                            <select>
                                <option name="type" value="rev">Rendit sipas revelencës</option>
                                <option name="type" value="asc"> Rendit sipas çmimit: të Ulët deri tek të Lartë</option>
                                <option name="type" value="desc"> Rendit sipas çmimit: të Lartë deri tek të Ulët </option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="shop-bottom-area">
                    <div class="tab-content jump">
                        <div id="shop-1" class="tab-pane active">
                            <div class="row">
                                @if (!Model.Any())
                                {
                                    <div class="alert alert-info">
                                        <p>Asnjë produkt i gjetur.</p>
                                    </div>
                                }
                                else
                                {
                                   @foreach (var product in Model)
                                    {
                                    <div class="col-xl-4 col-lg-6 col-md-6 col-sm-6">
                                        <div class="product-wrap mb-35">
                                            <div class="product-img mb-15">
                                                <a href="product-details.html"><img src="@product.ProductGalleries.FirstOrDefault().URL" style="width: 200px;height: 240px;object-fit: contain;padding-left: 50px" alt="product"></a>
                                                @if (product.OldPrice > 0)
                                                {
                                                    var zbritjaEu = product.OldPrice - product.Price;
                                                    var discount = (zbritjaEu / product.OldPrice) * 100;
                                                    <span class="price-dec" style="position: absolute;top: 0;left: 0;margin-left: 10px;margin-top: 10px">
                                                        -@Math.Round(discount)%
                                                    </span>
                                                }
                                                <div class="product-action">
                                                    <a data-bs-toggle="modal" data-bs-target="#exampleModal" title="Quick View" href="#"><i class="la la-plus"></i></a>
                                                    <a title="Wishlist" href="#"><i class="la la-heart-o"></i></a>
                                                    <a title="Compare" href="#"><i class="la la-retweet"></i></a>
                                                </div>
                                            </div>
                                            <div class="product-content">
                                                <span>Chair</span>
                                                <h4><a href="product-details.html">@(product.Name[..30])...</a></h4>
                                                <div class="price-addtocart">
                                                    <div class="product-price">
                                                        <span>@product.Price.ToString("#.00")€</span>
                                                        @if (product.OldPrice > 0)
                                                        {
                                                            <span class="old">@product.OldPrice.ToString("#.00")€</span>
                                                        }
                                                    </div>
                                                    <div class="product-addtocart">
                                                        <a title="Add To Cart" href="#">+ Shto ne shporte</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    } 
                                }
                            </div>
                        </div>
                        <div class="pagination-style text-center">
                            <ul>
                                <li><a class="prev" disabled="" href="#"><i class="la la-angle-left"></i></a></li>
                                <li><a class="active" href="#">01</a></li>
                                <li><a href="#">02</a></li>
                                <li><a href="#">03</a></li>
                                <li><a href="#">04</a></li>
                                <li><a href="#">05</a></li>
                                <li><a href="#">06</a></li>
                                <li><a class="next" href="#"><i class="la la-angle-right"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="sidebar-wrapper">
                    <div class="sidebar-widget">
                        <h4 class="sidebar-title">Kërko </h4>
                        <div class="sidebar-search mb-40 mt-20">
                            <form class="sidebar-search-form" action="#">
                                <input type="text" placeholder="Kërko këtu...">
                                <button>
                                    <i class="la la-search"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="sidebar-widget shop-sidebar-border pt-40">
                        <h4 class="sidebar-title">Filtro me kategori</h4>
                        <div class="shop-catigory mt-20">
                            <ul id="faq">
                                @foreach (var category in ViewBag.Categories)
                                {
                                    <li> <a asp-action="FilterProductsByCategories" asp-route-categoryId="@category.CategoryId">@category.Name</a></li>
                                }
                            </ul>
                        </div>
                    </div>
                    <div class="shop-price-filter mt-35 shop-sidebar-border pt-40 sidebar-widget">
                        <h4 class="sidebar-title">Filtrimi me Çmim</h4>
                        <div class="price-filter mt-20">
                            <div id="slider-range"></div>
                            <div class="price-slider-amount">
                                <div class="label-input">
                                    <input type="text" id="amount" name="price" placeholder="Add Your Price" />
                                </div>
                                <button type="button">Filtro</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
