@model WebUI.Areas.admin.Models.LoginViewModel
@{
   Layout = null;
   var returnUrl = ViewBag.ReturnUrl as string;
}
<!DOCTYPE html>
<html lang="en" dir="ltr" data-scompiler-id="0">
   <head>
      <meta charSet="UTF-8"/>
      <meta name="viewport" content="width=device-width, initial-scale=1"/>
      <meta name="format-detection" content="telephone=no"/>
      <title>Technocy Admin - Hyrja</title>
      <link rel="icon" type="image/png" href="~/Admin/images/favicon.png"/>
      <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,500,500i,700,700i,900,900i"/>
      <link rel="stylesheet" href="~/Admin/vendor/bootstrap/css/bootstrap.ltr.css"/>
      <link rel="stylesheet" href="~/Admin/css/style.css"/>
   </head>
   <body>
      <div class="min-h-100 p-0 p-sm-6 d-flex align-items-stretch">
         <div class="card w-25x flex-grow-1 flex-sm-grow-0 m-sm-auto">
            <div class="card-body p-sm-5 m-sm-3 flex-grow-0">
               <h1 class="mb-0 fs-3">Hyrja</h1>
               <div class="fs-exact-14 text-muted mt-2 pt-1 mb-5 pb-2">Hyni në llogarinë tuaj për të vazhduar.</div>
               <form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@returnUrl">
                  <div class="mb-4">
                     <label class="form-label">Përdoruesi</label>
                     <input asp-for="Username" type="text" class="form-control form-control-lg"/>
                     <span asp-validation-for="Username" class="text-danger"></span>
                  </div>
                  <div class="mb-4">
                     <label class="form-label">Fjalëkalimi</label>
                     <input asp-for="Password" type="password" class="form-control form-control-lg"/>
                     <span asp-validation-for="Password" class="text-danger"></span>
                  </div>
                    <div class="mb-4 row py-2 flex-wrap">
                       <div class="col-auto me-auto">
                          <label class="form-check mb-0">
                             <input type="checkbox" class="form-check-input"/>
                             <span class="form-check-label">Më mbaj mend.</span>
                          </label>
                       </div>
                       <div class="col-auto d-flex align-items-center">
                          <a href="auth-forgot-password.html">Keni harruar fjalëkalimin?</a>
                       </div>
                    </div>
                  <div>
                     <button type="submit" class="btn btn-primary btn-lg w-100">Kyqu</button>
                  </div> 
               </form>
            </div>
         </div>
      </div>
   <script src="~/Admin/vendor/jquery/jquery.min.js"></script>
   <script src="~/Admin/vendor/feather-icons/feather.min.js"></script>
   <script src="~/Admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
   <script src="~/Admin/vendor/fontawesome/js/all.min.js" data-auto-replace-svg="" async=""></script>
   <script src="~/Admin/js/stroyka.js"></script>
   <script src="~/Admin/js/custom.js"></script>
   <script src="~/Admin/js/demo.js"></script>
   @await Component.InvokeAsync("Notyf")
   </body>
</html>